<div class="jumbotron">
	<h2>Create a post for everyone to see</h2>
	<div class="card">
	 <div class="card-body">
	  <form method="POST" action="/posts">
	  	<div class="form-group row">
	  	  <label class="col-sm-2 col-form-label"><strong>Title: </strong></label>
		    <input type="hidden" name="post[user_id]" value=<%= current_user.id %> />
		  <input type="text" name="post[title]" placeholder="Title of post" />
		</div>
		<div class="form-group row">
		  <label class="col-sm-2 col-form-label"><strong>Comment: </strong></label>
		    <textarea type="text" name="post[body]" placeholder="Write about anything"></textarea>
		    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
		</div>
	  </form>
	  <input type="submit" value="submit" />
	 </div>
	</div>
</div>

